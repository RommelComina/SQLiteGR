<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteJossuePalacios.Elemento">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label x:Name="mensaje"></Label>
            <Label Text="Nombre: "></Label>
            <Entry x:Name="txtNombre" Placeholder="Nombre"></Entry>
            <Label Text="Usuario: "></Label>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"></Entry>
            <Label Text="Contrasena: "></Label>
            <Entry x:Name="txtContrasena" Placeholder="Contrasena"></Entry>
            <Button x:Name="btn_actualizar" Text="Actualizar" Clicked="btn_actualizar_Clicked" BackgroundColor="LawnGreen"></Button>
            <Button x:Name="btn_eliminar" Text="Eliminar" Clicked="btn_eliminar_Clicked" BackgroundColor="Red"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>