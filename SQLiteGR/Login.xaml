<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteJossuePalacios.Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtUsusario" Placeholder="Ingrese el usuario"></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contrasena" IsPassword="True"></Entry>
            <Button x:Name="btnRegistro" Text="Registro" Clicked="btnRegistro_Clicked"></Button>
            <Button x:Name="btnLogin" Text="Iniciar Sesion" Clicked="btnLogin_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>